{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.Temperature }}</td>
            </tr>
            <tr>
                <th>Precipitation</th>
                <td>{{ weather.Precipitation }}</td>
            </tr>
            <tr>
                <th>OvercastLevel</th>
                <td>{{ weather.OvercastLevel }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.Date ? weather.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ weather.Wind }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_crud_index') }}">back to list</a>

    <a href="{{ path('app_weather_crud_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather_crud/_delete_form.html.twig') }}
{% endblock %}
